<div class="topics-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 topics-new-container">
        <h1 class="text-center">Add Picture</h1>
          <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :Image %>
            <!-- unit21 ファイル選択ボタンを表示するfile_fieldを指定 -->
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :Description %>
            <!-- unit21 より広い入力欄を表示するtext_areaを指定-->
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <%= f.submit "投稿", class: "btn btn-block btn-black" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

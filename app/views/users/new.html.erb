<!-- unit17 新規作成
<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
  -->
  <div class="users-new-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-4 col-md-4 users-new-container">
          <h1 class="text-center text-white">Sign in</h1>
          <!-- unit18 「form_for モデル do |f|」でform作成 -->
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'text-white' %>
              <!-- unit18 text入力欄を表示 -->
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'text-white' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'text-white' %>
              <%= f.text_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: 'text-white' %>
              <%= f.text_field :password_confirmation, class: 'form-control' %>
            </div>

            <!-- unit18 formで入力したデータを送信するsubmitボタンを作成 -->
            <%= f.submit '登録', class: 'btn-block btn-white' %>
          <% end %>
          <%= link_to "ログインはこちら", "#", class: 'text-white' %>
        </div>
      </div>
    </div>
  </div>
